<div class="container">
	<h1 class="text-center">Sup Yall It's Me!</h1>
	<div class="text-center">
		<img class="img-responsive" src="/assets/img/burger.png">
	</div>
	<div class="row">
		<div class="col-6 text-center">
			<ul>
				{{#each burgers}}
					{{#unless this.devoured}}
						<li>
							{{this.burger_name}}
							<form>
								<input type="hidden" name="devoured" value="true">
								<button class="btn btn-success" type="submit">Devour!</button>
							</form>
						</li>
					{{/unless}}
				{{/each}}
			</ul>
		</div>
		<div class="col-6 text-center">
			<ul>
				{{#each burgers}}
					{{#if this.devoured}}
						<li>
							{{this.burger_name}}
							<form>
								<input type="hidden" name="devoured" value="false">
								<button class="btn btn-danger" type="submit">Regurgitate!</button>
							</form>
						</li>
					{{/if}}
				{{/each}}
			</ul>
		</div>
	</div>	
</div>